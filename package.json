{
  "name": "phpintel",
  "version": "0.0.1",
  "description": "A static analyser for PHP",
  "main": "lib/server.js",
  "scripts": {
    "test": "ts-mocha -p tsconfig.json src/**/*.spec.ts",
    "build": "npm run clean && tsc",
    "clean": "rimraf ./lib && mkdir lib",
    "compile-all": "tsc --watch --noEmit --project .",
    "watch": "npm run clean && tsc --watch"
  },
  "keywords": [
    "PHP",
    "static",
    "analyser",
    "language",
    "server"
  ],
  "author": "John Nguyen (john.nguyen09@outlook.com)",
  "license": "MIT",
  "dependencies": {
    "async-lock": "^1.1.3",
    "bytewise": "^1.1.0",
    "doc-parser": "^0.4.8",
    "level": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "subleveldown": "^3.0.1",
    "tree-sitter": "^0.13.23",
    "tree-sitter-php": "^0.13.1",
    "vscode-languageserver": "^4.4.2",
    "vscode-uri": "^1.0.6"
  },
  "devDependencies": {
    "@types/async-lock": "^1.1.0",
    "@types/expect": "^1.20.4",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.27",
    "mocha": "^6.0.1",
    "rimraf": "^2.6.3",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.2.4"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
